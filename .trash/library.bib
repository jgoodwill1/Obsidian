   keywords = {Interplanetary turbulence,Plasma physics,Solar magnetic reconnection},
   month = {12},
   pages = {182},
   publisher = {IOP Publishing},
   title = {Role of Parallel Solenoidal Electric Field on Energy Conversion in 2.5D Decaying Turbulence with a Guide Magnetic Field},
   volume = {923},
   url = {https://iopscience.iop.org/article/10.3847/1538-4357/ac2f45 https://iopscience.iop.org/article/10.3847/1538-4357/ac2f45/meta},
