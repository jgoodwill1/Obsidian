   keywords = {Magnetic reconnection,Sun: corona,Waves},
   month = {11},
   publisher = {Institute of Physics Publishing},
   title = {Evolution of magnetohydrodynamic waves in low layers of a coronal hole},
   volume = {796},
   year = {2014},
