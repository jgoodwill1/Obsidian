   issue = {1},
   journal = {The Astrophysical Journal Letters},
   month = {11},
   pages = {L11},
   publisher = {American Astronomical Society},
   title = {Impact of Switchbacks on Turbulent Cascade and Energy Transfer Rate in the Inner Heliosphere},
