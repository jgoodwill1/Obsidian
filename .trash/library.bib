   issue = {10},
   journal = {Space Weather},
   keywords = {Magnetic Reconnection,Students Questions},
   month = {10},
   pages = {606-610},
   publisher = {John Wiley & Sons, Ltd},
   title = {A Decade of Questions About Magnetic Reconnection},
   volume = {13},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/2015SW001220 https://onlinelibrary.wiley.com/doi/abs/10.1002/2015SW001220 https://agupubs.onlinelibrary.wiley.com/doi/10.1002/2015SW001220},
